<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Elite Investment Dashboard</title>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700&display=swap" rel="stylesheet">
<style>
body{margin:0;background:#0d0d0d;color:white;font-family:Poppins;}
.container{width:95%;max-width:1200px;margin:40px auto;}
h1,h2{color:gold;text-align:center;}
.plan-grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(280px,1fr));gap:20px;margin-top:30px;}
.plan-card{background:#151515;padding:20px;border-radius:15px;box-shadow:0 0 25px rgba(255,215,0,0.2);text-align:center;transition:transform 0.3s;}
.plan-card:hover{transform:scale(1.05);}
.plan-card h3{color:#FFD700;margin-bottom:10px;}
.plan-card p{margin:6px 0;}
.plan-card input{width:90%;margin:5px 0;padding:8px;border-radius:6px;border:none;}
.plan-card button{margin-top:10px;padding:10px 20px;background:gold;border:none;border-radius:10px;cursor:pointer;font-weight:bold;}
.plan-card button:hover{background:#e6c200;}
.card{background:#151515;padding:25px;border-radius:15px;box-shadow:0 0 25px rgba(255,215,0,0.2);margin-bottom:25px;}
table{width:100%;border-collapse:collapse;margin-top:20px;}
th,td{padding:12px;text-align:left;}
th{background:black;color:gold;}
tr:nth-child(even){background:#1c1c1c;}
</style>
</head>
<body>

<div class="container">
<h1>Elite Investment Dashboard</h1>
<p style="text-align:center;font-size:18px;">Available Balance: $<span id="balance">50000</span></p>

<!-- Plan Categories -->
<div class="plan-grid">
  <div class="plan-card" data-plan="Starter">
    <h3>Starter</h3>
    <p>Investment: $5,000 - $10,000</p>
    <p>ROI: 75%</p>
    <p>Wait: 10 working days</p>
    <input type="number" placeholder="Amount ($)" class="plan-amount">
    <input type="email" placeholder="Your Email" class="plan-email">
    <button onclick="investPlan('Starter',this)">Invest</button>
  </div>

  <div class="plan-card" data-plan="Growth">
    <h3>Growth</h3>
    <p>Investment: $10,100 - $49,900</p>
    <p>ROI: 120%</p>
    <p>Wait: 15 working days</p>
    <input type="number" placeholder="Amount ($)" class="plan-amount">
    <input type="email" placeholder="Your Email" class="plan-email">
    <button onclick="investPlan('Growth',this)">Invest</button>
  </div>

  <div class="plan-card" data-plan="Wealth">
    <h3>Wealth</h3>
    <p>Investment: $50,000 - $200,000</p>
    <p>ROI: 180%</p>
    <p>Wait: Monthly</p>
    <input type="number" placeholder="Amount ($)" class="plan-amount">
    <input type="email" placeholder="Your Email" class="plan-email">
    <button onclick="investPlan('Wealth',this)">Invest</button>
  </div>

  <div class="plan-card" data-plan="Elite Premium">
    <h3>Elite Premium</h3>
    <p>Investment: $200,000+</p>
    <p>ROI: 250%</p>
    <p>Wait: Monthly</p>
    <input type="number" placeholder="Amount ($)" class="plan-amount">
    <input type="email" placeholder="Your Email" class="plan-email">
    <button onclick="investPlan('Elite Premium',this)">Invest</button>
  </div>
</div>

<!-- Investments & Profits Table -->
<div class="card">
<h2>My Investments & Profits</h2>
<p>Total Invested: $<span id="totalInvested">0</span></p>
<p>Total Profit: $<span id="totalProfit">0</span></p>
<p>Total Withdrawable: $<span id="totalWithdrawable">0</span></p>

<table>
<thead>
<tr><th>Plan</th><th>Amount</th><th>Profit</th><th>Withdrawable</th><th>Date</th><th>Action</th></tr>
</thead>
<tbody id="investments"></tbody>
</table>
</div>

</div>

<script>
// Initial balance
let balance = 50000; // Example starting balance

// Simulated investments storage
let investments = [];

const planConfig = {
  "Starter": {roi:0.75, min:5000, max:10000, wait:10},
  "Growth": {roi:1.2, min:10100, max:49900, wait:15},
  "Wealth": {roi:1.8, min:50000, max:200000, wait:30},
  "Elite Premium": {roi:2.5, min:200000, max:Infinity, wait:30}
};

function investPlan(plan, btn){
  const card = btn.parentElement;
  const email = card.querySelector(".plan-email").value;
  const amount = parseFloat(card.querySelector(".plan-amount").value);
  const date = new Date().toISOString().split('T')[0];

  if(!email || !amount) { alert("Enter email and amount"); return; }

  const cfg = planConfig[plan];

  // Amount validation
  if(amount<cfg.min || amount>cfg.max){
    alert(`Amount does not match ${plan} plan range`); return;
  }

  // Balance validation
  if(amount > balance){
    alert(`Insufficient balance. Available: $${balance}`); return;
  }

  const profit = cfg.roi * amount;

  investments.unshift({plan,amount,profit,withdrawable:0,date,email});
  balance -= amount;
  document.getElementById("balance").innerText = balance.toFixed(2);

  alert(`Invested $${amount} in ${plan} plan. Profit: $${profit.toFixed(2)}`);
  loadInvestments();
}

function loadInvestments(){
  const tbody = document.getElementById("investments");
  tbody.innerHTML="";

  let totalInvested=0,totalProfit=0,totalWithdrawable=0;
  const today = new Date();

  investments.forEach((inv,i)=>{
    const waitDays = planConfig[inv.plan].wait;
    const investDate = new Date(inv.date);
    const elapsed = Math.floor((today-investDate)/(1000*60*60*24));
    const canMove = elapsed>=waitDays;

    let action='';
    if(canMove && inv.withdrawable===0){
      action=`<button onclick="moveProfit(${i})">Move Profit</button>`;
    } else if(inv.withdrawable>0){
      action='Profit Moved';
    } else {
      action=`Waiting... (${waitDays-elapsed} day(s))`;
    }

    tbody.innerHTML += `<tr>
      <td>${inv.plan}</td>
      <td>$${inv.amount}</td>
      <td>$${inv.profit.toFixed(2)}</td>
      <td>$${inv.withdrawable.toFixed(2)}</td>
      <td>${inv.date}</td>
      <td>${action}</td>
    </tr>`;

    totalInvested += inv.amount;
    totalProfit += inv.profit;
    totalWithdrawable += inv.withdrawable;
  });

  document.getElementById("totalInvested").innerText=totalInvested.toFixed(2);
  document.getElementById("totalProfit").innerText=totalProfit.toFixed(2);
  document.getElementById("totalWithdrawable").innerText=totalWithdrawable.toFixed(2);
}

function moveProfit(index){
  investments[index].withdrawable = investments[index].profit;
  balance += investments[index].profit; // add profit to available balance
  document.getElementById("balance").innerText = balance.toFixed(2);
  alert("Profit moved to withdrawable balance and added to balance!");
  loadInvestments();
}

loadInvestments();
</script>

</body>
</html>
