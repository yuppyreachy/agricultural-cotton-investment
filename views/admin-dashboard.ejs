<style>
#supportBox{
 position:fixed;
 bottom:20px;
 right:20px;
 width:420px;
 background:#0b0b0b;
 border:2px solid gold;
 border-radius:14px;
 overflow:hidden;
 box-shadow:0 0 25px rgba(255,215,0,0.6);
 font-family:Segoe UI;
}

#supportHeader{
 background:black;
 color:gold;
 padding:12px;
 font-weight:bold;
 text-align:center;
}

#userList{
 width:120px;
 background:#111;
 border-right:1px solid gold;
 overflow-y:auto;
}

.userItem{
 padding:10px;
 border-bottom:1px solid #333;
 cursor:pointer;
 color:gold;
}
.userItem:hover{background:#222}

#chatArea{
 flex:1;
 padding:10px;
 overflow-y:auto;
 height:300px;
 color:white;
}
</style>

<script src="/socket.io/socket.io.js"></script>
<script>
const socket = io();
socket.emit("admin-join");

let currentUser = null;

// receive online users
socket.on("online-users", users=>{
    const list = document.getElementById("userList");
    list.innerHTML = "";
    users.forEach(id=>{
        const div = document.createElement("div");
        div.className = "userItem";
        div.innerText = "User " + id;
        div.onclick = ()=> selectUser(id);
        list.appendChild(div);
    });
});

// select user to chat
function selectUser(id){
    currentUser = id;
    document.getElementById("chatArea").innerHTML = 
    "<div style='color:gold'>Chatting with User "+id+"</div>";
}

// receive messages
socket.on("receive-message", data=>{
    if(!currentUser || data.userId != currentUser) return;

    const chat = document.getElementById("chatArea");
    chat.innerHTML += `<div><b>${data.sender}:</b> ${data.text}</div>`;
    chat.scrollTop = chat.scrollHeight;
});

// send message
function sendAdminMsg(){
    const msg = document.getElementById("adminMsg").value;
    if(!msg || !currentUser) return alert("Select user first");

    socket.emit("admin-message", {
        userId: currentUser,
        text: msg
    });

    const chat = document.getElementById("chatArea");
    chat.innerHTML += `<div><b>admin:</b> ${msg}</div>`;
    document.getElementById("adminMsg").value="";
}
</script>

</div>

