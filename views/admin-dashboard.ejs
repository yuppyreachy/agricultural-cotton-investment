<div id="supportBox">
    <div id="supportHeader">ðŸŸ¡ LIVE SUPPORT</div>

    <div style="display:flex;height:350px;">
        <!-- ONLINE USERS -->
        <div id="userList"></div>

        <!-- CHAT AREA -->
